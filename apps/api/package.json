{
  "name": "@aistudio555/api",
  "version": "0.0.0",
  "private": true,
  "description": "AiStudio555 Academy - Express API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:load": "node scripts/load-test.js",
    "test:load:stress": "TEST_CONCURRENCY=50 TEST_DURATION=120 node scripts/load-test.js",
    "monitor:health": "curl -s http://localhost:4000/health | jq",
    "monitor:dashboard": "curl -s http://localhost:4000/health/dashboard | jq",
    "monitor:metrics": "curl -s http://localhost:4000/health/metrics | jq",
    "monitor:budget": "curl -s http://localhost:4000/health/budget | jq"
  },
  "dependencies": {
    "@aistudio555/db": "workspace:*",
    "@aistudio555/types": "workspace:*",
    "@aistudio555/utils": "workspace:*",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "redis": "^4.6.12",
    "stripe": "^14.25.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
